{
  "extends": "./tsconfig.src.json",
  "compilerOptions": {
    "noEmit": true,
    "rootDir": ".",
    "outDir": "./_test/dist",
    "tsBuildInfoFile": "./_test/dist/.tsbuildinfo",
  },
  "include": [
    "./_test/**/*.ts",
    "./_src/**/*.ts"
  ],
  "exclude": [
      "./dist",
      "node_modules",
      "build",
      "lib",
      "dist",
      "**/*.d.ts.map",
      ".git",
      ".data",
      "**/.*",
      "**/*.tmp"
  ],
  "references": [
    {
      "path": "./tsconfig.src.json"
    },
  ]
}