{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "root": true,
  "extends": ["@daotl/biome-config"],
  "files": {
    "includes": ["**", "!**/frontend/**", "!**/auto-imports.d.ts"],
  },
  "linter": {
    "rules": {
      "complexity": {
        "noExcessiveCognitiveComplexity": {
          "level": "error",
          "options": {
            "maxAllowedComplexity": 20,
          },
        },
      },
      "performance": {
        "noBarrelFile": "off",
        "noReExportAll": "off",
        "noNamespaceImport": "off",
      },
      "style": {
        "noNestedTernary": "off",
        "noProcessEnv": "off",
        "noExportedImports": "off",
        "useFilenamingConvention": "off",
        "useNamingConvention": "off",
      },
      "suspicious": {
        "noConsole": "off",
      },
    },
  },
  "overrides": [
    // Biome doesnâ€™t support monorepos very well fow now due to some limitations in resolving nested configuration files
    // So we define overrides for packages here
    // See: https://biomejs.dev/guides/big-projects/#monorepos
    {
      "includes": [
        "**/eslint.config.js",
        "**/eslint.config.cjs",
        "**/eslint.config.mjs",
        "**/eslint.*.config.js",
        "**/eslint.*.config.cjs",
        "**/eslint.*.config.mjs",
      ],
      "linter": {
        "rules": {
          "correctness": {
            "noUnusedImports": "off",
          },
          "suspicious": {
            "noExplicitAny": "off",
          },
        },
      },
    },
    // api
    {
      "includes": ["**/api/src/lib/**/*.ts"],
      "linter": {
        "rules": {
          "suspicious": {
            "noExplicitAny": "off",
          },
        },
      },
    },
    {
      "includes": [
        "**/api/src/models/**/*.ts",
        "**/api/src/services/**/*.ts",
        "**/api/src/resources/**/*.ts",
      ],
      "linter": {
        "rules": {
          "style": {
            "noNamespace": "off",
          },
        },
      },
    },
    {
      "includes": ["**/api/src/**/*.controllers.ts"],
      "linter": {
        "rules": {
          "style": {
            "noDefaultExport": "off",
          },
        },
      },
    },
  ],
}
